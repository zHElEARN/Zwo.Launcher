<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="zlauncher.Pages.EnvInfo.ZofflineInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:zlauncher.Pages.EnvInfo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Grid Margin="20" RowSpacing="10">
        <StackPanel Spacing="10" Orientation="Vertical">
            <ProgressBar IsIndeterminate="True" x:Name="progressBar" Value="100" />
            <Grid RowDefinitions="*,*" ColumnDefinitions="1*,6*" RowSpacing="10" ColumnSpacing="20">
                <TextBlock Grid.Column="0" Grid.Row="0" Text="远程版本：" />
                <TextBlock Grid.Column="0" Grid.Row="1" Text="本地版本：" />

                <TextBlock Grid.Column="1" Grid.Row="0" Text="---" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="---" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
